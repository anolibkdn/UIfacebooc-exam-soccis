<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--trang thai binh thuong khi khong click-->
    <item>
        <shape>
            <!--the gradient cho phep rai mau tu stratcolor toi
            endcolor-->
            <gradient
                android:startColor="#fff"
                android:endColor="#000"
                android:angle="270"
                />
            <!--solid mau nen-->
            <solid
                android:color="#fff"
                />
            <!--the padding la the can le no giu cho khoang cach text hoac
            img trong button-->

            <padding/>
            <!--cho biet mau vien a do rong vien-->
            <stroke
                android:color="#fff"
                android:width="1dp"
                />

            <!--the corners cho biet goc vuong cua tuan vi vat theo ban kinh-->
            <corners
                android:radius="4dp"
                />
        </shape>

    </item>
</selector>